<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
	<ImageView android:id="@+id/item_piciv"
	    android:layout_width="200dp"
	    android:layout_height="300dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerHorizontal="true"
	    />
	<TextView android:id="@+id/item_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:layout_toRightOf="@id/item_piciv"
	    android:layout_alignTop="@id/item_piciv"
	    android:layout_marginLeft="40dp"
	    />
	<TextView android:id="@+id/item_type"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:layout_below="@id/item_name"
	    android:layout_alignLeft="@id/item_name"
	    android:layout_marginTop="100dp"
	    />
	<TextView android:id="@+id/item_area"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:layout_below="@id/item_type"
	    android:layout_alignLeft="@id/item_type"
	  	android:layout_marginTop="100dp"
	    />
</RelativeLayout>
